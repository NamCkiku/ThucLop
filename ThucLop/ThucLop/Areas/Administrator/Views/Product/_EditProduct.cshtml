@*@model ThucLop.Models.Product*@
<link href="~/Content/Administrator/assets/bootstrap-datetimepicker/css/datetimepicker.css" rel="stylesheet" />
<script src="~/Content/Administrator/js/jquery.js"></script>
<script src="~/Content/Administrator/assets/ckfinder/ckfinder.js"></script>
<script src="~/Content/Administrator/assets/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label>Tên Sản Phẩm</label>
                <input type="text" class="form-control" name="Name" placeholder="Tên Sản Phẩm">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Mã Sản Phẩm</label>
                <input type="text" class="form-control" name="IdProduct" placeholder="Mã Sản Phẩm">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label>Loại Sản Phẩm</label>
                <select class="form-control m-bot15" name="CategoryId">
                    <option>1000</option>
                    <option>2</option>
                    <option>3</option>
                </select>
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="exampleInputEmail1">Bảo Hành</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Bảo Hành">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Mã Sản Phẩm</label>
                <input type="text" class="form-control" id="exampleInputEmail1" placeholder="Mã Sản Phẩm">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Giá Sản Phẩm Vnđ</label>
                <input class="form-control" name="UnitBrief" type="text" maxlength="50" value="0">
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Giảm Giá</label>
                <select class="form-control">
                    <option value="0"> --- </option>
                    <option value="1">10 %</option>
                </select>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <label for="exampleInputEmail1">Số Lượng</label>
                <input class="form-control" type="text" maxlength="50" value="0" name="Quantity" style="width: 80px;" onkeyup="this.value=FormatNumber(this.value);" id="f_money">
            </div>
        </div>
        <div class="col-lg-4">
            <input type="text" name="Picture" id="txthinhanh2" class="form-control" placeholder="Hình Ảnh">
        </div>
        <div class="col-lg-2">
            <button type="submit" class="btn btn-primary" id="btnSelectImage1">
                <i class="glyphicon glyphicon-upload"></i>
                <span>Chọn Ảnh</span>
            </button>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' name="ProductDate" class="form-control" placeholder="Ngày Đăng" />
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-danger date-reset"><i class="fa fa-times"></i></button>
                        <button type="button" class="btn btn-warning date-set"><i class="fa fa-calendar"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" placeholder="Ngày Hết Hạn" />
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-danger date-reset"><i class="fa fa-times"></i></button>
                        <button type="button" class="btn btn-warning date-set"><i class="fa fa-calendar"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="exampleInputEmail1">Mô Tả Tóm Tắt</label>
                <textarea id="editor1" name="editor1"></textarea>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="exampleInputEmail1">Mô Tả Chi Tiết</label>
                <textarea id="editor2" name="Description"></textarea>
            </div>
        </div>
    </div>
}

<script src="~/Content/Administrator/assets/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
    $(function () {
        $('#datetimepicker2').datetimepicker();
    });
</script>
<script>
    var editor = CKEDITOR.replace('editor1', {
        customConfig: '/Content/Administrator/assets/ckeditor/config.js',
    });
    var editor = CKEDITOR.replace('editor2', {
        customConfig: '/Content/Administrator/assets/ckeditor/config.js',
    });
</script>
<script>
    $('#btnSelectImage1').on('click', function (e) {
        e.preventDefault();
        var finder = new CKFinder();
        finder.selectActionFunction = function (url) {
            $('#txthinhanh2').val(url);
        };
        finder.popup();
    })
</script>




