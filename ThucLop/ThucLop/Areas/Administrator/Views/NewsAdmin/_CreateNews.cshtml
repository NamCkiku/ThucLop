@*@model ThucLop.Models.Product*@
<link href="~/Content/Administrator/assets/bootstrap-datetimepicker/css/datetimepicker.css" rel="stylesheet" />
@*<script src="~/Content/Administrator/js/jquery.js"></script>*@
<script src="~/Scripts/jquery-2.1.4.js"></script>
<script src="~/Content/Administrator/assets/ckfinder/ckfinder.js"></script>
<script src="~/Content/Administrator/assets/ckeditor/ckeditor.js"></script>

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <div class="row">
        <div class="col-lg-6">
            <div class="form-group">
                <label for="exampleInputEmail1">Tiêu Đề Tin</label>
                <input type="email" class="form-control" id="exampleInputEmail1" placeholder="Tiêu Đề Tin">
            </div>
        </div>
        <div class="col-lg-6">
            <div class="form-group">
                <label for="exampleInputEmail1">Loại Tin</label>
                <select class="form-control m-bot15">
                    <option>Option 1</option>
                    <option>Option 2</option>
                    <option>Option 3</option>
                </select>
            </div>
        </div>
        <div class="col-lg-4">
            <input type="text" id="txthinhanh" class="form-control" placeholder="Hình Ảnh">
        </div>
        <div class="col-lg-2">
            <button type="submit" class="btn btn-primary" id="btnSelectImage">
                <i class="glyphicon glyphicon-upload"></i>
                <span>Chọn Ảnh</span>
            </button>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker1'>
                    <input type='text' class="form-control" placeholder="Ngày Đăng" />
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-danger date-reset"><i class="fa fa-times"></i></button>
                        <button type="button" class="btn btn-warning date-set"><i class="fa fa-calendar"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-3">
            <div class="form-group">
                <div class='input-group date' id='datetimepicker2'>
                    <input type='text' class="form-control" placeholder="Ngày Hết Hạn" />
                    <div class="input-group-btn">
                        <button type="button" class="btn btn-danger date-reset"><i class="fa fa-times"></i></button>
                        <button type="button" class="btn btn-warning date-set"><i class="fa fa-calendar"></i></button>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="exampleInputEmail1">Mô Tả Tóm Tắt</label>
                <textarea id="editor1" name="editor1"></textarea>
            </div>
        </div>
        <div class="col-lg-12">
            <div class="form-group">
                <label for="exampleInputEmail1">Mô Tả Chi Tiết</label>
                <textarea id="editor2" name="editor2"></textarea>
            </div>
        </div>
    </div>
}

<script src="~/Content/Administrator/assets/ckeditor/ckeditor.js"></script>
<script type="text/javascript">
    $(function () {
        $('#datetimepicker1').datetimepicker();
    });
    $(function () {
        $('#datetimepicker2').datetimepicker();
    });
</script>
<script>
    var editor = CKEDITOR.replace('editor1', {
        customConfig: '/Content/Administrator/assets/ckeditor/config.js',
    });
    var editor = CKEDITOR.replace('editor2', {
        customConfig: '/Content/Administrator/assets/ckeditor/config.js',
    });
</script>
<script>
    $('#btnSelectImage').on('click', function (e) {
        e.preventDefault();
        var finder = new CKFinder();
        finder.selectActionFunction = function (url) {
            $('#txthinhanh').val(url);
        };
        finder.popup();
    })

</script>





